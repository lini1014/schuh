@startuml Komponenten

left to right direction

actor RESTClient
actor GraphQLClient

node "Nest" {
  [RequestLoggerMiddleware]

  [SchuhController]
  [SchuhResolver]

  [SchuhService]

  [PrismaClient]

  [MailService]
}


cloud {
    [Prisma]
}

cloud {
    [nest-keycloak-connect]
}

cloud {
    [nodemailer]
}

database "DB schuh" {
    [Tabelle schuh]
    [Tabelle modell]
    [Tabelle abbildung]
}

node {
    [Keycloak]
}

node {
    [Mailserver]
}

RESTClient ~~> [RequestLoggerMiddleware]
GraphQLClient ~~> [RequestLoggerMiddleware]

[RequestLoggerMiddleware] ~~> [SchuhController]
[RequestLoggerMiddleware] ~~> [SchuhResolver]

[SchuhController] ..> [SchuhService]
[SchuhResolver] ..> [SchuhService]
[SchuhService] ..> [PrismaClient]

[PrismaClient] ~~> [Prisma]
[Prisma] ~~> [Tabelle schuh]
[Prisma] ~~> [Tabelle modell]
[Prisma] ~~> [Tabelle abbildung]

[SchuhController] ..> [nest-keycloak-connect]
[nest-keycloak-connect] ~~> [Keycloak]

[SchuhService] ..> [MailService]
[MailService] ~~> [nodemailer]
[nodemailer] ~~> [Mailserver]

[MailService] ~[hidden]~> [nest-keycloak-connect]

footer (c) JÃ¼rgen Zimmermann

@enduml
